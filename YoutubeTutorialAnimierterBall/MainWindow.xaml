<Window x:Class="YoutubeTutorialAnimierterBall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeTutorialAnimierterBall"
        mc:Ignorable="d"
        Title="Ball Animation im Canvas Objekt" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="StartStopAnimation" Content="START/STOP" Width="70" Height="50" Click="StartStopAnimation_Click"/>

        <Canvas x:Name="AnimationField" Grid.Column="1" Background="DarkGreen">
            <Ellipse x:Name="Ball" Width="23" Height="23" Fill="OrangeRed"/>
        </Canvas>
    </Grid>
</Window>
